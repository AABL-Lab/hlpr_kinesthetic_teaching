<?xml version="1.0"?>
<launch>

    <!-- Start the demonstration recording action server -->
    <node name="demo_record_server" pkg="hlpr_record_demonstration" type="record_demonstration_action_server.py" respawn="false" output="screen" />

    <!-- Start the basic kinesthetic interaction server -->
    <node name="basic_kinesthetic_interact" pkg="hlpr_kinesthetic_interaction" type="basic_kinesthetic_interaction.py" respawn="false" output="screen" >
        <!-- Location for your data storage. NOTE: path will be created for you -->
        <!-- default: ~/ -->
        <param name="data_folder_loc" value="~/" type="string"/>
        <!-- Folder name for data storage. NOTE: path will be created for you -->
        <!-- default: data -->
        <param name="data_folder_name" value="data" type="string"/>
        <!-- prefix before filenames to append -->
        <!-- default: demo -->
        <param name="data_prefix" value="demo" type="string"/>
    </node>

    <!-- Start the EEF publisher node -->
    <node name="eef_pub" pkg="hlpr_record_demonstration" type="eef_publisher.py" respawn="false" output="screen" />

</launch>
